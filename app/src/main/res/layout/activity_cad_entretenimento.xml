<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"> <!-- Define o fundo com transparência (no formato ARGB) -->

        <ImageView
            android:layout_width="278dp"
            android:layout_height="189dp"
            android:layout_marginStart="45dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Entretenimento"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint=" #fcc42c"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCusto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:backgroundTint=" #fcc42c"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#640082"
            android:text="Adicionar Entrenimento"
            android:onClick="funcAdd" />

        <ListView
            android:id="@+id/lista"
            android:layout_width="fill_parent"
            android:layout_height="127dp"
            android:dividerHeight="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cálculo Total:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCalcTotal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint=" #fcc42c"
            android:editable="false"
            android:inputType="none" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#640082"
            android:text="Voltar"
            android:onClick="funcVoltar"/>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#640082"
            android:text="Finalizar"
            android:onClick="funcFinalizar"/>

    </LinearLayout>
</ScrollView>
