<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dados Principais"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_de_viajantes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/edtDadosTotViaj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:editable="false"
                    android:inputType="number"
                    android:text="@string/_0_0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duração da Viagem (Dias)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/edtDadosDurViagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:editable="false"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gasolina"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total estimado de Quilômetros"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_column="1" />

                <EditText
                    android:id="@+id/edtGasolinaTotQuil"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:editable="false"
                    android:inputType="number"
                    android:text="@string/_0_0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Média de quilômetros por litro"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtGasolinaMediaLitro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Custo Médio por Litro"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtGasolinaCustoMedioLitro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Total de Veículos"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtGasolinaTotVaic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:editable="false"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Cálculo Total"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtGasolinaCalcTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tárifa Aérea"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Custo Estimado por Pessoa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTarifaCustoPessoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
