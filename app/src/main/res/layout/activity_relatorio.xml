                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTarifaCalcTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refeições"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Custo estimado por Refeição"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtRefeicaoCustoEst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:editable="false"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Refeições por Dia"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtRefeicaoDia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Cálculo Total"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtRefeicaoCalcTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospedagem"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Custo Médio (por Noite)"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHospedagemCusto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:editable="false"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Total de Noites"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHospedagemNoites"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:autofillHints="a"
                    android:editable="false"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Total de Quartos"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHospedagemQuartos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Cálculo Total"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHospedagemCalcTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entretenimento"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_column="1" />

            </TableRow>

            <ListView
                android:id="@+id/lista"
                android:layout_width="fill_parent"
                android:layout_height="127dp"
                android:dividerHeight="1dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Cálculo Total"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtEntretenimentoCalcTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:editable="false"
                    android:autofillHints="a"
                    android:backgroundTint=" #fcc42c"
                    android:inputType="number"
                    android:text="@string/_0_0" />

            </TableRow>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Fechar Relatório"
                android:onClick="funcFechar"/>
        </TableLayout>
    </HorizontalScrollView>
</ScrollView>